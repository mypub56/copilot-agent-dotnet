{
    // Name this configuration
    "name": "Introduction to Copilot",
    "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "service": "app",
  "workspaceFolder": "/workspace",
  "forwardPorts": [1433],
  "customizations": {
    "vscode": {
        "extensions": [
                "github.copilot",
                "ms-dotnettools.csdevkit",
                "ms-azuretools.vscode-docker",
                "ms-mssql.mssql"
            ],
      "settings": {
        "mssql.connections": [
          {
            "server": "localhost",
            "database": "master",
            "user": "sa",
            "password": "Your_strong_password123"
          }
        ]
      }
    }
  },
  "features": {},
  "portsAttributes": {
    "1433": {
      "label": "MSSQL Server",
      "onAutoForward": "notify"
    }
  },
  "mounts": []
}